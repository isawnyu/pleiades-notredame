    <script type="text/javascript">
(function($) {

  function sortCredits(key) {
    var list = $('div#credits-list');
    var items = list.children('div.credit-record');
    items.sort(function(a, b) {
      var compA = $('.credit-' + key, $(a)).text();
      var compB = $('.credit-' + key, $(b)).text();
      return (compA > compB) ? 1 : (compA < compB) ? -1 : 0;
    });
    $.each(items, function(idx, itm) { list.append(itm); });
  }

  function sortCreditsCount() {
    var list = $('div#credits-list');
    var items = list.children('div.credit-record');
    items.sort(function(a, b) {
      var compA = parseInt($('.credit-count', $(a)).text());
      var compB = parseInt($('.credit-count', $(b)).text());
      return (compA < compB) ? 1 : (compA > compB) ? -1 : 0;
    });
    $.each(items, function(idx, itm) { list.append(itm); });
  }

  function reverseCredits() {
    var list = $('div#credits-list');
    var items = list.children('div.credit-record');
    var arr = $.makeArray(items);
    arr.reverse();
    $.each(arr, function(idx, itm) { list.append(itm); });
  }

  $(function() {

    $('a#sort-name').click(function(evt){
      evt.preventDefault();
      if ($(this).css('font-weight') == 'bold') {
        reverseCredits();
      }
      else {
        $('#sort-actions a').css('font-weight', 'normal');
        $(this).css('font-weight', 'bold');
        sortCredits('name');
      }
    });

    $('a#sort-count').click(function(evt){
      evt.preventDefault();
      if ($(this).css('font-weight') == 'bold') {
        reverseCredits();
      }
      else {
        $('#sort-actions a').css('font-weight', 'normal');
        $(this).css('font-weight', 'bold');
        sortCreditsCount();
      }
    });

    $('a#sort-roles').click(function(evt){
      evt.preventDefault();
      if ($(this).css('font-weight') == 'bold') {
        reverseCredits();
      }
      else {
        $('#sort-actions a').css('font-weight', 'normal');
        $(this).css('font-weight', 'bold');
        sortCredits('roles');
      }
    });

    $('a#sort-date').click(function(evt){
      evt.preventDefault();
      if ($(this).css('font-weight') == 'bold') {
        reverseCredits();
      }
      else {
        $('#sort-actions a').css('font-weight', 'normal');
        $(this).css('font-weight', 'bold');
        sortCredits('date');
      }
    });

  });

})(jQuery);
</script>
