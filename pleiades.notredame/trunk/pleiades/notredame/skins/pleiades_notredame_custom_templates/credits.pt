<div id="sort-actions">
<p>sort by: <a id="sort-name" href="#" style="font-weight: bold;">name</a>
 | <a id="sort-count" href="#">contribution</a>
 | <a id="sort-roles" href="#">role</a>
 | <a id="sort-date" href="#">date</a>
</p>
</div>

<div id="credits-list">
<div class="credit-record" tal:repeat="record here/getCredits">
  <img 
    tal:attributes="src record/portrait" 
    alt="" class="portraitPhoto" 
    width="75" 
    style="float: left; margin-right: 1em; margin-bottom: 1em; vertical-align: top;"
    >
  <a rel="nofollow" tal:attributes="href string:/author/${record/username}">
    <h4 class="credit-name" tal:content="record/fullname">Full name</h4>
  </a>
  <p>
    <span class="credit-roles" tal:content="record/roles">Roles</span>
    since <span tal:content="record/start_date">Start</span>.
    <a 
      rel="nofollow" 
      tal:attributes="href string:/search?Creator=${record/username}">
        <span tal:content="record/authored">Count</span> additions
    </a>,
    <a 
      rel="nofollow" 
      tal:attributes="href string:/search?Contributors=${record/username}">
        <span tal:content="record/contributed">Count</span> other contributions
    </a>
    <span class="credit-count" style="display:none;" tal:content="record/count">
      Count</span>
    <span class="credit-date" style="display:none;" tal:content="record/start">
      Start</span>
  </p>
  <div class="visualClear"></div>
</div>
</div>

